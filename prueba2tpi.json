            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"camionDominio\": \"{{domCamion}}\",\n  \"tramoIds\": [10, 20, 30],\n  \"fechasInicio\": [\"2025-12-01T08:00:00\", \"2025-12-01T13:00:00\", \"2025-12-02T08:00:00\"],\n  \"fechasFin\":    [\"2025-12-01T12:00:00\", \"2025-12-01T18:00:00\", \"2025-12-02T12:00:00\"]\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "http://localhost:8082/api/v1/tramos/asignar-consecutivos"
          }
        },
        {
          "name": "Vista del Chofer (Ver 3 Tramos)",
          "request": {
            "auth": { "type": "bearer", "bearer": [ { "key": "token", "value": "{{tokenOp}}", "type": "string" } ] },
            "method": "GET",
            "header": [],
            "url": "http://localhost:8083/api/flota/transportistas/{{idTransp}}/tramos-pendientes"
          }
        }
      ]
    },
