{
    "name": "4. Viajes (Rol: TRANSPORTISTA)",
    "item": [
        {
            "name": "4.1 Iniciar Tramo",
            "event": [
                {
                    "listen": "prerequest",
                    "script": {
                        "exec": [
                            "if(!pm.collectionVariables.get(\"tokenTrans\")) console.error(\"⚠️ Falta token TRANSPORTISTA\");",
                            "console.log(\"Iniciando tramo ID: \" + pm.collectionVariables.get(\"idTramo\"));"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"dominioCamion\": \"{{dominioCamion}}\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/api/flota/tramos/{{idTramo}}/iniciar",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "flota",
                        "tramos",
                        "{{idTramo}}",
                        "iniciar"
                    ]
                }
            }
        },
        {
            "name": "4.2 [TEST] Forzar Estado EN_TRANSITO",
            "request": {
                "method": "PUT",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/v1/solicitudes/{{nroSolicitud}}/en-transito",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "solicitudes",
                        "{{nroSolicitud}}",
                        "en-transito"
                    ]
                },
                "description": "Simula el evento de RabbitMQ para pruebas sin cola de mensajes"
            }
        },
        {
            "name": "4.3 CHECKPOINT - Verificar Estado EN_TRANSITO",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var jsonData = pm.response.json();",
                            "pm.test(\"El estado de la solicitud debe ser EN_TRANSITO\", function () {",
                            "    pm.expect(jsonData.estado).to.eql(\"EN_TRANSITO\");",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/v1/solicitudes/{{nroSolicitud}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "solicitudes",
                        "{{nroSolicitud}}"
                    ]
                }
            }
        },
        {
            "name": "4.4 Finalizar Tramo",
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"dominioCamion\": \"{{dominioCamion}}\",\n  \"kmRecorridos\": 350.5\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/api/flota/tramos/{{idTramo}}/finalizar",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "flota",
                        "tramos",
                        "{{idTramo}}",
                        "finalizar"
                    ]
                }
            }
        },
        {
            "name": "4.5 [TEST] Forzar Estado ENTREGADA",
            "request": {
                "method": "PUT",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/v1/solicitudes/{{nroSolicitud}}/entregada",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "solicitudes",
                        "{{nroSolicitud}}",
                        "entregada"
                    ]
                },
                "description": "Simula el evento de RabbitMQ para pruebas sin cola de mensajes"
            }
        }
    ],
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{tokenTrans}}",
                "type": "string"
            }
        ]
    }
},
{
    "name": "5. Validación Final (Rol: CLIENTE)",
    "item": [
        {
            "name": "5.1 CHECKPOINT - Verificar Estado ENTREGADA",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var jsonData = pm.response.json();",
                            "pm.test(\"El estado final de la solicitud debe ser ENTREGADA\", function () {",
                            "    pm.expect(jsonData.estado).to.eql(\"ENTREGADA\");",
                            "});",
                            "",
                            "if (jsonData.estado === \"ENTREGADA\") {",
                            "    console.log(\"✅ FLUJO COMPLETO EXITOSO: Borrador -> Aceptada -> En Transito -> Entregada\");",
                            "} else {",
                            "    console.error(\"❌ El flujo falló. Estado actual: \" + jsonData.estado);",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/v1/solicitudes/{{nroSolicitud}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "solicitudes",
                        "{{nroSolicitud}}"
                    ]
                }
            }
        }
    ],
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{tokenCli}}",
                "type": "string"
            }
        ]
    }
}